!!!
%html
  %head
    %meta(content="initial-scale=1.0, user-scalable=no" name="viewport")/

    -# CSS
    %link(rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css")
    %link(rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css")
    %link(rel="stylesheet" href="/stylesheets/main.css")
    = yield_content :stylesheets

    -# JS
    %script(src="//code.jquery.com/jquery-1.11.1.min.js" type="text/javascript")
    %script(src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js" type="text/javascript")
    %script(src="//maps.googleapis.com/maps/api/js?key=AIzaSyBbJ16uUP1tqA_-qsojvMCBV12V71rukHA" type="text/javascript")
    = yield_content :javascripts

  %body
    .navbar.navbar-static-top
      .container
        .navbar-header
          %a.navbar-brand(href="/")
            %h2
              Polygon Auto Generator V1

    #content(role="main")
      .container
        = yield

    #footer(role="contentinfo")
      .container
        .row
          .pull-right
            &copy; Factual Inc.
